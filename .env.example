# Application Settings
APP_NAME=Signal Transceiver
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=a!dev-secret-key-change-in-production

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/app.db
# For production, use MySQL/PostgreSQL:
# DATABASE_URL=mysql+aiomysql://user:pass@localhost/dbname
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost/dbname

# API Settings
API_V1_PREFIX=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Settings
ADMIN_API_KEY=a!admin-secret-key-change-

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Security
API_KEY_ROTATION_DAYS=90
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Monitoring & Alerts
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60
ALERT_WEBHOOK_URL=

# Feishu/Lark Alert (飞书告警)
FEISHU_WEBHOOK_URL=
FEISHU_ENABLED=false

# DingTalk Alert (钉钉告警)
DINGTALK_WEBHOOK_URL=
DINGTALK_ENABLED=false

# Email Notifications
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@example.com

# Backup Settings
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Scheduler Settings
SCHEDULER_ENABLED=true
CLEANUP_LOGS_INTERVAL_HOURS=24
DAILY_REPORT_TIME=09:00
HEALTH_CHECK_INTERVAL_MINUTES=5

# WebSocket Settings
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=.csv,.json,.xlsx

# Internationalization
DEFAULT_LANGUAGE=zh-CN
SUPPORTED_LANGUAGES=zh-CN,en-US,ja-JP
DEFAULT_TIMEZONE=Asia/Shanghai

# Performance
ASYNC_WORKERS=4
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true

# Development Only (disable in production)
ENABLE_DOCS=true
ENABLE_REDOC=true
RELOAD_ON_CHANGE=true
